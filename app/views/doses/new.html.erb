<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Create a dose</h2>
      <%= simple_form_for ([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
        <% end %>
        <br>
      <%= link_to 'Go back', cocktails_path, class: 'btn btn-warning' %>
    </div>
  </div>
</div>



