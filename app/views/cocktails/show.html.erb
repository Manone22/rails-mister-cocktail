<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.image_url %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
          <% @cocktail.doses.each do |dose| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @cocktail.image_url %>)">
          <%= dose.description %>
          <%= link_to "Delete", dose_path(dose), method: :delete %>
          <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h2>New cocktail</h2>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :ingredient, collection: Ingredient.all%>
          <%= f.input :description %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_cocktail_path(@cocktail), class: 'btn btn-primary' %>
<%= link_to 'Go back', cocktails_path, class: 'btn btn-warning' %>

