<div class="container">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1372&q=80);">
        <div class="container">
          <h1>Delicious Cocktails</h1>
          <p>See our selection!</p>
          <%= link_to "Add your own cocktails", new_cocktail_path, class: "btn btn-flat" %>
        </div>
      </div>
</div>


      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @cocktails.each do |cocktail| %>
            <tr>
              <td><%= cocktail.name %></td>
              <% if cocktail.image_url %>
              <td><%= image_tag cocktail.image_url, width: 80 %></td>
              <% else %>
              <td></td>
              <% end %>
              <td><%= link_to 'See details', cocktail %></td>
              <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
              <td><%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>







